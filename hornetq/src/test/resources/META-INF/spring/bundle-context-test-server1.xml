       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="messagingConfs" class="java.util.Properties">
        <constructor-arg index="0">
            <props>
                <prop key="hornetq.server.configuration">
                    src/test/resources/META-INF/server1/hornetq-configuration.xml
                </prop>
                <prop key="hornetq.jms.configuration">
                    src/test/resources/META-INF/server1/hornetq-jms.xml
                </prop>
            </props>
        </constructor-arg>
    </bean>

</beans>
