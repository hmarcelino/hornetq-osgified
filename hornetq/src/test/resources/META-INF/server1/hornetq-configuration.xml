<configuration xmlns="urn:hornetq"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="urn:hornetq /schema/hornetq-configuration.xsd">

    <clustered>true</clustered>
    <cluster-user>mokepi-cluster-user</cluster-user>
    <cluster-password>mokepi-cluster-pass</cluster-password>

    <security-enabled>false</security-enabled>
    <persistence-enabled>false</persistence-enabled>

    <connectors>
        <connector name="inVm">
            <factory-class>org.hornetq.core.remoting.impl.invm.InVMConnectorFactory</factory-class>
        </connector>
        <connector name="netty">
            <factory-class>org.hornetq.core.remoting.impl.netty.NettyConnectorFactory</factory-class>
            <param key="host" value="${host.ip}"/>
            <param key="port" value="6445"/>
        </connector>
    </connectors>

    <acceptors>
        <acceptor name="inVm">
            <factory-class>org.hornetq.core.remoting.impl.invm.InVMAcceptorFactory</factory-class>
        </acceptor>
        <acceptor name="netty-acceptor">
            <factory-class>org.hornetq.core.remoting.impl.netty.NettyAcceptorFactory</factory-class>
            <param key="host" value="${host.ip}"/>
            <param key="port" value="6445"/>
        </acceptor>
    </acceptors>

    <broadcast-groups>
        <broadcast-group name="bg-group-${server.id}">
            <group-address>231.7.7.7</group-address>
            <group-port>8876</group-port>
            <broadcast-period>100</broadcast-period>
            <connector-ref>netty</connector-ref>
        </broadcast-group>
    </broadcast-groups>

    <discovery-groups>
        <discovery-group name="dg-group-${server.id}">
            <group-address>231.7.7.7</group-address>
            <group-port>8876</group-port>
            <refresh-timeout>10000</refresh-timeout>
        </discovery-group>
    </discovery-groups>

    <cluster-connections>
        <cluster-connection name="cluster-connection">
            <address>jms</address>
            <connector-ref>netty</connector-ref>
            <retry-interval>500</retry-interval>
            <use-duplicate-detection>true</use-duplicate-detection>
            <forward-when-no-consumers>true</forward-when-no-consumers>
            <max-hops>1</max-hops>
            <discovery-group-ref discovery-group-name="dg-group-${server.id}"/>
        </cluster-connection>
    </cluster-connections>

</configuration>
